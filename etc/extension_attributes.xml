<?xml version="1.0"?>
<!--
Magento issue with join (don't join attribute as should)
fixed in 2.2.4
https://github.com/magento/magento2/commit/0e8311ded322d3e50c9186544b1cd9a63929c79c
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="navision_data" type="array">
            <join reference_table="edu_navision_product" reference_field="product_id" join_on_field="entity_id">
                <field>navision_code</field>
                <field>navision_status</field>
            </join>
        </attribute>
    </extension_attributes>
</config>